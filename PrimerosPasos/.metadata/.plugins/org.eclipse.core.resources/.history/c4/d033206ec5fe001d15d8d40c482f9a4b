
public class Calculos_conMath {

	public static void main(String[] args) {
		
		//double raiz=Math.sqrt(126.89); //siempre con double porque tiene que ser con posibilidad a decimal
		
		//float num1=5.85F;
		
		//int resultado=Math.round(num1); 
		
		//Hay veces que la propia programación nos obliga a que el valor sea int y el valor sea un double, entonces haremos una refundición
		
		double num1=5.85;
		
		int resultado=(int)Math.round(num1); //con el (int) se hace a refundición convirtiendo el valor en un entero
		
		System.out.println(resultado);
		
		
		//ejemplo para usar Pow (hacer potencias)
		double base =5;
		
		double exponente=3;
		
		int total=(int)Math.pow(base, exponente);
		
		System.out.println("La potencia de " + base + " elevado a "+ exponente + " es " + total);

	}

}
