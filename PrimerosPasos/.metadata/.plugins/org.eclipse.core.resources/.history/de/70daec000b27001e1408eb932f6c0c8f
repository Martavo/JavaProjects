package PruebaFinalEx3;

import java.util.ArrayList;

public class PruebaFinalEx3 {

	public static void main(String[] args) {
		ArrayList<Integer> numeros = new ArrayList<>();
		numeros.add(7);
		numeros.add(3);
		numeros.add(8);
		numeros.add(2);
		numeros.add(4);
		numeros.add(6);  
		numeros.add(2);

		System.out.println(suma(numeros));
	}
		
	public static int suma(ArrayList<Integer> numeros) {
		int suma = 0, j = 0;
		
		int sumaMax = numeros.get(0);
		
		for (int i = 1; i < numeros.size(); i++) {
       	 if (numeros.get(j)+numeros.get(j+1) > sumaMax) {
       		sumaMax = numeros.get(j);	
       	 }
       	 i++;
       	 
         }
		
		return suma;
}
}
